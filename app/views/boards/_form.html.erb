<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<div class="container">
    <div class="index-layout">
<%= form_for @board do |f| %>
    
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.submit class: 'button' %>
<% end %>
    </div>
</div>