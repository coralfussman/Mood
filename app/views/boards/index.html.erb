<% if flash[:success] %>
  <% flash[:success].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= button_to("Create a New Board", new_board_path, { :method => :get, :class => 'start_button' })%>



<% @boards.each do |board| %>
    <p> <%= link_to board.title, board_path(board) %> </p>
    <% if board.images.count > 0 %>
        <img src = <%= board.images.first.img_url%> height="100" width="100">
    <% end %>
<% end %>